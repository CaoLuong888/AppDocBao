<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="60dp"
    tools:context=".MainActivity">

    <TextView
        android:background="@android:color/holo_blue_light"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUẢN LÝ TÀI KHOẢN"></TextView>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã tài khoản"></TextView>

        <EditText
            android:inputType="number"
            android:id="@+id/edMaTaiKhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên tài khoản"></TextView>

        <EditText
            android:id="@+id/edTenTaiKhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu:       "></TextView>

        <EditText
            android:inputType="textPassword"
            android:id="@+id/edMatkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="5dp"
            android:background="@android:color/holo_green_light"
            android:textColor="@color/white"
            android:id="@+id/btThem"
            android:layout_width="wrap_content"
            android:text="Thêm"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:layout_margin="5dp"
            android:background="@android:color/holo_red_light"
            android:textColor="@color/white"
            android:id="@+id/btXoa"
            android:layout_width="wrap_content"
            android:text="Xóa"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:layout_margin="5dp"
            android:background="@android:color/darker_gray"
            android:textColor="@color/white"
            android:id="@+id/btReSet"
            android:layout_width="wrap_content"
            android:text="Reset"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="5dp"
            android:background="@android:color/holo_orange_light"
            android:textColor="@color/white"
            android:id="@+id/btCapNhat"
            android:layout_width="wrap_content"
            android:text="Cập Nhật"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:layout_margin="5dp"
            android:background="@android:color/holo_blue_light"
            android:textColor="@color/white"
            android:id="@+id/btTruyVan"
            android:layout_width="wrap_content"
            android:text="Truy Vấn"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>
    <ListView
        android:id="@+id/lvDanhSach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>